<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.SignupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:padding="40dp">

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="700dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textViewHeadingSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signup"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/editTextFnameSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewHeadingSignup"
                android:layout_marginTop="50dp"
                android:hint="First Name"
                android:inputType="text"
                android:textSize="25sp"
                android:background="@drawable/rounded_input"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextLnameSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextFnameSignup"
                android:layout_marginTop="50dp"
                android:hint="Last Name"
                android:inputType="text"
                android:textSize="25sp"
                android:background="@drawable/rounded_input"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextUsernameSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextLnameSignup"
                android:layout_marginTop="50dp"
                android:hint="Username"
                android:inputType="text"
                android:textSize="25sp"
                android:background="@drawable/rounded_input"
                android:padding="12dp" />

            <EditText
                android:id="@+id/editTextPasswordSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextUsernameSignup"
                android:layout_marginTop="40dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="25sp"
                android:background="@drawable/rounded_input"
                android:padding="12dp" />

            <Button
                android:id="@+id/buttonSignup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextPasswordSignup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:padding="16dp"
                android:background="@drawable/rounded_login_btn"
                android:text="@string/signup"
                android:textColor="@color/black"
                android:textSize="28sp"/>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>